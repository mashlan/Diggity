<!doctype html>
<html lang="en" id="ng-app" ng-app="myApp">
    <head>
        <title>WOD Diggity</title>
    </head>
    <body>
        <nav class="navbar navbar-fixed-top navbar-material-blue-grey-400" role="navigation">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" onclick="toggleNav()">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.IsAuthenticated)
                {
                    <a class="navbar-brand" style="line-height: 21px;" href="#/user">Woddiggity</a>
                }
                else
                {
                    <a class="navbar-brand" style="line-height: 21px;" href="@VirtualPathUtility.ToAbsolute("~/Home")"><i class="fa fa-home"></i> Home</a>
                }
            </div>

            <div class="collapse navbar-collapse">
                @Html.Partial("_MainMenuPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </nav>

        <div class="nav-slide" id="main-menu">
            <ul class="nav">
                <li><a href="#/WOD">WODs</a></li>
                <li><a href="#/timer"><span class="fa fa-clock-o"></span> Timer</a></li>
                <li>
                <a href="#/wendler" target="_self" class="dropdown-toggle" data-toggle="dropdown">Wendlers <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#/wendler/create">Create</a></li>
                </ul>                
            </ul>
        </div>
        
        <div id="settings-menu">
            <ul class="nav">
                <li>
                    <a href="#/settingsMenu" target="_self" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-ellipsis-v"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#share"><span class="fa fa-heart"></span> Share</a></li>
                        <li><a href="#settings"><span class="fa fa-gear"></span> Settings</a></li>
                        <li><a href="javascript:sessionStorage.removeItem('accessToken');$('#logoutForm').submit();"><span class="fa fa-user"></span> Log off</a></li>
                    </ul>
                </li>
            </ul>
        </div>

        <div class="content">
            <div ng-view></div>
        </div>

        <div id="alertPopup" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="alert" style="margin-bottom: 0">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"></h4>
                        <p id="alertMessage" style="font-size: 1.3em;"></p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
